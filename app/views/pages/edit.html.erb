<% @page_title = "Edit a Page" %>

<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages edit">
  <h2>Edit a Page</h2>

  <%= form_for(@page, :url => page_path(@page, :subject_id => @subject.id)) do |f| %>

      <%= render(:partial => 'pageform', :locals => {:f => f}) %>
  
  <div class="form-buttons">
    <%= f.submit("Update this Page") %>
  </div>

  <% end %>
</div>

</body>
