<% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %><br />
  </div>
<% end %>

<body style="font-family:Arial; width:100%; background:linear-gradient(white,lightblue)">

<h1>Pages</h1>
<p><%= link_to('Add New Page', new_page_path, :class => 'action new') %></p>

<table class="listing" summary="Page list">
  <tr class="header">
    <th>#</th>
    <th>Subject ID</th>
    <th>Page Name</th>
    <th>Permalink</th>
    <th>Visible</th>
    <th>Sections</th>
    <th>Actions</th>
  </tr>
  <% @pages.each do |page| %>
    <tr>
      <td><%= page.position %></td>
      <td><%= page.subject_id %></td>
      <td><%= page.name %></td>
      <td><%= page.permalink %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="center">TBD<!-- %= page.sections.size % --></td>
      <td class="actions">
        <%= link_to('Show', page_path(page), :class => 'action show') %>
        <%= link_to('Edit', edit_page_path(page), :class => 'action edit') %>
        <%= link_to('Delete', delete_page_path(page), :class => 'action delete') %>
      </td>
    </tr>
  <% end %>
</table>
</body>