<% @page_title = "Delete a Page" %>

<%= link_to("<< Back to List", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages delete">
  <h2>Delete a Page</h2>

<!-- In the line below, must specify that the method is delete -->
  <%= form_for(@page, :url => page_path(@page, :subject_id => @subject.id), :method => 'delete') do |f| %>

    <p>Are you SURE you want to permanently delete this page?</p>
    
<!-- In the line below, you could use @subject.name instead of f.object -->
    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Page") %>
    </div>

  <% end %>
</div>

</body>

